<div class="mt-8 mx-auto w-full max-w-md bg-white p-8 rounded-xl shadow-md">
  <h2 class="text-center text-2xl font-semibold text-gray-800 mb-6">Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="space-y-4">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  label_html: { class: "block text-sm font-medium text-gray-700 mb-1" },
                  input_html: {
                    autocomplete: "email",
                    class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-violet-500 focus:border-violet-500"
                  } %>

      <%= f.input :password,
                  required: false,
                  label_html: { class: "block text-sm font-medium text-gray-700 mb-1" },
                  input_html: {
                    autocomplete: "current-password",
                    class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-violet-500 focus:border-violet-500"
                  } %>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.input :remember_me,
                      as: :boolean,
                      inline_label: "Remember me",
                      label_html: { class: "ml-2 text-sm text-gray-700" },
                      wrapper_html: { class: "flex items-center" } %>
        </div>
      <% end %>
    </div>

    <div class="mt-6">
      <%= f.button :submit, "Log in", class: "w-full bg-violet-600 hover:bg-violet-700 text-white font-semibold py-2 px-4 rounded-md shadow cursor-pointer" %>
    </div>
  <% end %>

  <div class="mt-6 text-center text-sm text-gray-600">
    <%= render "devise/shared/links" %>
  </div>

</div>
