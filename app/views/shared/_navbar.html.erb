<div class="z-2 sticky top-0 left-0 text-xl bg-violet-400 dark:bg-violet-800 py-4 px-6 flex justify-between transition ease-linear duration-150 shadow-md dark:shadow-md/40">
  <%= link_to root_path, class: "group inline-flex items-center gap-2 text-md font-medium text-slate-800 dark:text-slate-200 hover:text-teal-700 dark:hover:text-teal-400 focus:outline-none focus:ring-2 focus:ring-teal-400" do %>
    <%= render "shared/icons/logo", klasses: "dark:stroke-slate-50 dark:group-hover:stroke-teal-400" %>
    SearchYourStuff
  <% end %>

  <div data-action="click->sidebar#toggle" data-sidebar-target="hamburgerIcon focus:outline-none focus:ring-2 focus:ring-teal-400">
    <%= render "shared/icons/hamburger", klasses: "hover:cursor-pointer w-8 h-8 stroke-slate-800 dark:stroke-slate-50 hover:stroke-teal-700 dark:hover:stroke-teal-400" %>
  </div>

  <div data-action="click->sidebar#toggle" data-sidebar-target="closeIcon" class="hidden focus:outline-none focus:ring-2 focus:ring-teal-400">
    <%= render "shared/icons/close", klasses: "hover:cursor-pointer w-8 h-8 stroke-slate-800 dark:stroke-slate-50 hover:stroke-teal-700 dark:hover:stroke-teal-400" %>
  </div>
</div>
