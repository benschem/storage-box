<% item ||= nil %>
<% tag ||= nil %>

<div class="p-1 px-2 bg-slate-200 dark:bg-slate-400 rounded-xl inline-flex gap-1 justify-center items-center">
  <%= tag&.name %>
  <%= link_to item_tag_path(item, tag), data: { turbo_method: :delete } do %>
    <%= render "shared/icons/close_circle" %>
  <% end %>
</div>
