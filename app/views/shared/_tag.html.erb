<% tag ||= nil %>

<% if tag.present? && tag == @tag %>
    <div class="me-2 p-1 px-2 bg-violet-200 dark:bg-violet-700 rounded-xl inline-flex gap-1 justify-center items-center">
      <%= link_to household_tag_path(current_household, tag) do %>
        <%= tag.name %>
      <% end %>
      <%= link_to tag_path(tag), data: { turbo_method: :delete } do %>
        <%= render "shared/icons/close" %>
      <% end %>
    </div>
<% else %>
    <div class="me-2 p-1 px-2 bg-slate-200 dark:bg-slate-700 hover:bg-slate-300 hover:dark:bg-slate-600 rounded-xl inline-flex gap-1 justify-center items-center">
      <%= link_to household_tag_path(current_household, tag) do %>
        <%= tag.name %>
      <% end %>
      <%= link_to tag_path(tag), data: { turbo_method: :delete } do %>
        <%= render "shared/icons/close" %>
      <% end %>
    </div>
<% end %>
