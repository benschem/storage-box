<% tag ||= nil %>

<% if tag == @tag %>
    <div class="p-1 px-2 bg-violet-200 dark:bg-violet-400 rounded-xl inline-flex gap-1 justify-center items-center">
      <%#= link_to house_tag_path(current_house, tag) do %>
        <%= tag&.name %>
      <%# end %>
      <%= link_to tag_path(tag), data: { turbo_method: :delete } do %>
        <%= render "shared/icons/close_circle" %>
      <% end %>
    </div>
<% else %>
    <div class="p-1 px-2 bg-slate-200 dark:bg-slate-400 hover:bg-slate-300 hover:dark:bg-slate-600 rounded-xl inline-flex gap-1 justify-center items-center">
      <%#= link_to house_tag_path(current_house, tag) do %>
        <%= tag&.name %>
      <%# end %>
      <%= link_to tag_path(tag), data: { turbo_method: :delete } do %>
        <%= render "shared/icons/close_circle" %>
      <% end %>
    </div>
<% end %>
