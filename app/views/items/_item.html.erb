<%= turbo_frame_tag item do %>
  <%= link_to item_path(item), class: "bg-slate-50 dark:bg-slate-900 rounded-xl shadow-md dark:shadow-md/90 p-4 flex flex-col gap-2 hover:shadow-lg dark:hover:shadow-lg/90 hover:-translate-y-1 transition ease-linear duration-150 active:translate-0 active:shadow-sm dark:active:shadow-sm/90" do %>
    <%# if @post.image.attached? %>
        <%#= image_tag @post.image.variant(resize_to_limit: [500, 500]), alt: "Picture of #{item.name}", class: "rounded-xl max-w-24" %>
    <%# end %>

    <h3 class="mb-2 text-xl md:text-2xl font-semibold col-span-2 text-slate-900 dark:text-slate-100">
      <%= item.name.capitalize %>
    </h3>

    <div class="sm:text-md md:text-lg flex gap-4 text-slate-500 stroke-slate-500 dark:text-slate-400 dark:stroke-slate-400">
      <div class="flex gap-2 content-center flex-wrap">
        <%= render "shared/icons/box" %>
        Box <%= item.box.number %>
      </div>

      <div class="flex gap-2 content-center flex-wrap">
        <%= render "shared/icons/room" %>
        <%= item.box.room.name.capitalize %>
      </div>
    </div>

    <div class="flex gap-2 content-center flex-wrap sm:text-md md:text-lg text-slate-500 stroke-slate-500 dark:text-slate-400 dark:stroke-slate-400">
      <%= render "shared/icons/house" %>
      <%= item.box.room.house.address %>
    </div>
  <% end %>
<% end %>
