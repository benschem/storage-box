<%= turbo_frame_tag dom_id(item) do %>
  <%= link_to item_path(item, format: :turbo_stream), data: { turbo_frame: dom_id(item), turbo_prefetch: false }, class: "bg-slate-50 dark:bg-slate-900 rounded-xl shadow-md dark:shadow-md/90 p-4 flex flex-col gap-2 hover:shadow-lg dark:hover:shadow-lg/90 hover:-translate-y-1 transition ease-linear duration-150 active:translate-0 active:shadow-sm dark:active:shadow-sm/90" do %>
    <%# if item.image.attached? %>
        <%#= image_tag item.image.variant(resize_to_limit: [500, 500]), alt: "Picture of #{item.name}", class: "rounded-xl max-w-24" %>
    <%# end %>

    <h3 class="mb-2 text-xl lg:text-2xl font-semibold col-span-2 text-slate-900 dark:text-slate-100">
      <%= item.name.capitalize %>
    </h3>

    <div class="text-lg flex content-center flex-wrap gap-4 text-slate-500 stroke-slate-500 dark:text-slate-400 dark:stroke-slate-400">
      <div class="flex gap-2 content-center flex-wrap">
        <%= render "shared/icons/room" %>
          <%= item.box.room.name.capitalize %>
      </div>
      <div class="flex gap-2 content-center flex-wrap">
        <%= render "shared/icons/box" %>
          Box <%= item.box.number %>
      </div>
    </div>

    <div class="flex gap-2 content-center flex-wrap text-lg lg:text-lg text-slate-500 stroke-slate-500 dark:text-slate-400 dark:stroke-slate-400">
      <%= render "shared/icons/house" %>
        <%= item.box.room.house.name %>
    </div>
  <% end %>
<% end %>
