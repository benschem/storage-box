<% if item.blank? %>
  <div>
    This item doesn't exist!
  </div>
<% else %>
  <%= link_to item_path(item), class: "border-1 border-slate-200 bg-slate-950 rounded-xl shadow-md dark:shadow-md/90 p-4 max-w-2xl flex gap-4 hover:shadow-lg dark:shadow-lg/90 hover:-translate-y-1 transition ease-linear duration-150 active:translate-0 active:shadow-sm dark:active:shadow-sm/90" do %>

    <% if @post.image.attached? %>
        <%= image_tag @post.image.variant(resize_to_limit: [500, 500]), alt: "Picture of #{item.name}", class: "rounded-xl max-w-24" %>
    <% end %>

    <div class="flex flex-col gap-4">

      <h3 class="text-2xl col-span-2 text-slate-900 dark:text-slate-100">
        <%= item.name.capitalize %>
      </h3>

      <div class="text-lg flex flex-col gap-2 text-slate-700 stroke-slate-700 dark:text-slate-400 dark:stroke-slate-400">
        <div class="flex gap-2 content-center flex-wrap">
          <%= render "shared/icons/room" %>
          <%= item.box.room.name.capitalize %>
        </div>

        <div class="flex gap-2 content-center flex-wrap">
          <%= render "shared/icons/box" %>
          Box #<%= item.box.padded_number(current_house) %>
        </div>
      </div>

    </div>
  <% end %>
<% end %>
