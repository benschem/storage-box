            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="flex flex-col gap-1">
        <%= form.label :name, class: "text-slate-900 dark:text-slate-100" %>
        <%= form.text_field :name, class: "rounded p-2 border border-slate-300 dark:border-slate-700 bg-white dark:bg-slate-800 text-slate-900 dark:text-slate-100" %>
      </div>

      <div class="flex flex-col gap-1">
        <%= form.label :description, class: "text-slate-900 dark:text-slate-100" %>
        <%= form.text_area :description, rows: 4, class: "rounded p-2 border border-slate-300 dark:border-slate-700 bg-white dark:bg-slate-800 text-slate-900 dark:text-slate-100" %>
      </div>

      <div class="flex flex-col gap-1">
        <%= form.label :box_id, "Box", class: "text-slate-900 dark:text-slate-100" %>
        <%= form.collection_select :box_id, Box.all, :id, :number, {}, class: "rounded p-2 border border-slate-300 dark:border-slate-700 bg-white dark:bg-slate-800 text-slate-900 dark:text-slate-100" %>
      </div>

      <div class="flex justify-between mt-4">
        <%= form.submit class: "bg-teal-500 hover:bg-teal-600 text-white py-2 px-4 rounded" %>
        <%= link_to "Cancel", item_path(item, closed: false, format: :turbo_stream), data: { turbo_frame: dom_id(item), turbo_prefetch: false },  class: "bg-slate-300 hover:bg-slate-400 dark:bg-slate-700 dark:hover:bg-slate-600 text-slate-800 dark:text-slate-200 py-2 px-4 rounded" %>
