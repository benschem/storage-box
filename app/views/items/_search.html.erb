<%= form_with url: items_path,
    method: :get,
    data: {
      turbo_frame: 'items',
      controller: "search",
      search_target: "form",
      action: "input->search#submit"
    },
    role: "search",
    class: "py-6 px-2 flex flex-grow gap-2 w-full" do %>

  <label for="search" class="sr-only">Search for item</label>

  <div class="relative flex-grow">
    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
      <%= render "shared/icons/magnifying_glass", klasses: "dark:stroke-slate-100" %>
    </div>

    <%= text_field_tag :search,
        params[:search],
        id: "search",
        placeholder: "Search for item",
        class: "w-full pl-12 pr-4 py-2 rounded-xl border border-0 bg-slate-50 dark:bg-slate-900 text-lg text-slate-950 dark:text-slate-100 placeholder-slate-500 dark:placeholder-slate-400 shadow-md dark:shadow-md/90 focus:outline-none focus:ring-2 focus:ring-teal-500" %>
  </div>

  <button type="submit" class="sr-only" aria-label="Search"></button>
<% end %>
