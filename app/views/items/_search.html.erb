<%= form_with url: items_path,
    method: :get,
    data: {
      turbo_frame: 'items',
      controller: "search",
      search_target: "form",
      search_all_rooms_value: @rooms.to_json(only: [:id, :name, :house_id]),
      search_all_boxes_value: @boxes.to_json(only: [:id, :number, :house_id, :room_id])
    },
    role: "search",
    class: "px-2 flex flex-col gap-2 w-full text-slate-900 dark:text-slate-100 placeholder-slate-100 dark:placeholder-slate-100" do |f| %>

  <!-- Search bar -->
  <div class="relative flex-grow">
    <label for="search" class="sr-only">Search for item</label>
    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
      <%= render "shared/icons/magnifying_glass", klasses: "dark:stroke-slate-100" %>
    </div>
    <%= text_field_tag :search,
        params[:search],
        id: "search",
        placeholder: "Search for item",
        data: { action: "input->search#submit" },
        class: "w-full pl-12 pr-4 py-2 rounded-xl border bg-slate-300 dark:bg-slate-800 border-1 border-slate-300 dark:border-slate-700 text-lg focus:outline-none focus:ring-2 focus:ring-teal-500" %>
  </div>

  <!-- Filters -->
  <label for="houses" class="mx-2 mt-2 font-medium whitespace-nowrap max-h-min">
    Filter by:
  </label>
  <div class="grid grid-cols-2 gap-2 items-center">
    <!-- Houses-->
    <%= select_tag "houses",
      options_for_select(
        ["All", *@houses.map { |house| [house.name.capitalize, house.id] }],
        selected: params[:houses]
      ),
      multiple: true,
      data: {
        action: "change->search#updateRoomsAndBoxes change->search#submit",
        search_target: "houses"
      },
      class: "grow rounded-xl p-2 bg-slate-300 dark:bg-slate-800 border-1 border-slate-300 dark:border-slate-700 focus:outline-none focus:ring-2 focus:ring-teal-500"
    %>
    <!-- Rooms -->
    <%= select_tag "rooms",
      options_for_select(
        ["All", *@rooms.map { |room| ["#{room.name.capitalize} - #{room.house.name.capitalize}", room.id] }],
        selected: params[:rooms]
      ),
      multiple: true,
      data: {
        action: "change->search#updateRoomsAndBoxes change->search#submit",
        search_target: "rooms"
      },
      class: "rounded-xl p-2 bg-slate-300 dark:bg-slate-800 border-1 border-slate-300 dark:border-slate-700 focus:outline-none focus:ring-2 focus:ring-teal-500"
    %>
  </div>

  <!-- Box checkboxes -->
  <div class="mt-2 grid grid-cols-2 gap-2 items-center">
    <!-- Unboxed checkbox -->
    <div class="flex items-center gap-2">
      <%= check_box_tag "unboxed", "true", params[:unboxed] == "true",
        id: "unboxed",
        data: { action: "change->boxFilter#toggleUnboxed change->search#submit",
                box_filter_target: "unboxed" },
        class: "rounded border-slate-300 dark:border-slate-700" %>
      <label for="unboxed" class="font-medium">Items not in a box</label>
    </div>

    <!-- Boxed checkbox -->
    <div class="flex items-center gap-2">
      <%= check_box_tag "boxed", "true", params[:boxed] == "true",
        id: "boxed",
        data: { action: "change->boxFilter#toggleBoxed change->search#submit",
                box_filter_target: "boxed" },
        class: "rounded border-slate-300 dark:border-slate-700" %>
      <label for="boxed" class="font-medium">Items in a box</label>
    </div>
  </div>

  <!-- Boxes select -->
  <div class="mt-2">
    <%= select_tag "boxes",
      options_for_select(
        ["All", *@boxes.map { |box| ["Box #{box.number} - #{box.room.name.capitalize} - #{box.house.name.capitalize}", box.id] }],
        selected: params[:boxes]
      ),
      multiple: true,
      id: "boxes",
      data: { action: "change->boxFilter#selectBox change->search#submit",
              search_target: "boxes" },
      class: "w-full rounded-xl p-2 bg-slate-300 dark:bg-slate-800 border-1 border-slate-300 dark:border-slate-700 focus:outline-none focus:ring-2 focus:ring-teal-500"
    %>
  </div>

  <!-- Tags -->
  <div class="mt-2">
    <div class="flex gap-4 items-center mb-2">
      <!-- Any tags -->
      <div class="flex items-center gap-2">
        <%= radio_button_tag "tag_mode", "any_tags",
          params[:tag_mode] == "any_tags",
          id: "any_tags",
          data: { action: "change->tagFilter#toggle change->search#submit",
                  tag_filter_target: "any" } %>
        <label for="any_tags" class="font-medium">Match any tags</label>
      </div>

      <!-- All tags -->
      <div class="flex items-center gap-2">
        <%= radio_button_tag "tag_mode", "all_tags",
          params[:tag_mode] == "all_tags",
          id: "all_tags",
          data: { action: "change->tagFilter#toggle change->search#submit",
                  tag_filter_target: "all" } %>
        <label for="all_tags" class="font-medium">Match all tags</label>
      </div>
    </div>

    <!-- Tag multiselect -->
    <%= select_tag "tags",
      options_for_select(
        @tags.map { |tag| [tag.name.capitalize, tag.id] },
        selected: params[:tags]
      ),
      multiple: true,
      id: "tags",
      data: { action: "change->tagFilter#toggle change->search#submit",
              tag_filter_target: "tags" },
      class: "w-full rounded-xl p-2 bg-slate-300 dark:bg-slate-800 border border-slate-300 dark:border-slate-700 focus:outline-none focus:ring-2 focus:ring-teal-500"
    %>
  </div>

  <!-- Sort -->
  <div class="mt-2 flex gap-2 items-center">
    <label for="sort_by" class="font-medium whitespace-nowrap max-h-min">
      Sort by:
    </label>
    <%= select_tag "sort_by",
      options_for_select([
        ["Date modified", "updated_at"],
        ["Date created", "created_at"],
        ["Name", "name"]
      ], params[:sort_by] || "updated_at"),
      data: { action: "change->search#submit" },
      class: "grow rounded-xl p-2 bg-slate-300 dark:bg-slate-800 border-1 border-slate-300 dark:border-slate-700 focus:outline-none focus:ring-2 focus:ring-teal-500"
    %>

    <!--Sort direction-->
    <%= select_tag "sort_direction",
      options_for_select([
        ["↓", "desc"],
        ["↑", "asc"]
      ], params[:sort_direction] || "desc"),
      data: { action: "change->search#submit" },
      class: "rounded-xl p-2 bg-slate-300 dark:bg-slate-800 border-1 border-slate-300 dark:border-slate-700 focus:outline-none focus:ring-2 focus:ring-teal-500"
    %>
  </div>

  <button type="submit" class="sr-only" aria-label="Search"></button>
<% end %>
