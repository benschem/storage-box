<%= render "shared/tabs", current_tab: params[:tab] || "items_tab", household: @household %>


  <table class="table-auto w-full">
    <thead class="sr-only">
      <tr class="border-b-1 border-slate-200">
        <td scope="col">Name</td>
        <td scope="col">Box</td>
      </tr>
    </thead>
    <tbody>
      <% unless @items.blank? %>
        <% @items.each do |item| %>
          <tr class="even:bg-slate-100 dark:even:bg-slate-800">
            <td class="w-full px-4 py-6 text-slate-950 dark:text-slate-50 ">
             <%= item.name %>
            </td>


            <td class="px-4 py-6">
              <div class="p-1 px-2 bg-teal-200 dark:bg-teal-800 rounded-xl inline-flex justify-center items-center text-teal-900 dark:text-teal-100">
                <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 me-2 stroke-teal-900 dark:stroke-teal-100">
                  <path d="M11 21.73a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73z"/>
                  <path d="M12 22V12"/>
                  <polyline points="3.29 7 12 12 20.71 7"/>
                  <path d="m7.5 4.27 9 5.15"/>
                </svg>
                #<%= item.box.padded_number(@household) %>
              </div>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td class="px-2 py-6">You haven't added a box yet!</td>
        </tr>
      <% end %>
    </tbody>
  </table>
