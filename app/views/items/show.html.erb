<%= render "shared/table" do %>
  <%= render "shared/table/head", column_headings: %w(Item Box Room) %>
  <%= render "shared/table/body" do %>
    <% unless @item.blank? %>
      <%= render "shared/table/row", klasses: "bg-violet-200 dark:bg-violet-700 border-b-1 border-violet-600 dark:border-violet-100" do %>
        <%= render "shared/table/cell" do %>
          <%= @item.name %>
        <% end %>
        <%= render "shared/table/cell" do %>
          <%= link_to household_room_path(current_household, @item.box.room) do %>
            <%= render "shared/badge", icon: "room" do %>
              <%= @item.box.room.name.capitalize %>
            <% end %>
          <% end %>
        <% end %>
        <%= render "shared/table/cell" do %>
          <%= link_to household_box_path(current_household, @item.box) do %>
            <%= render "shared/badge", icon: "box" do %>
              <%= "##{@item.box.padded_number(current_household)}" %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    <% else %>
      <%= render "shared/table/row" do %>
        <%= render "shared/table/cell", text: "This box doesn't exist!" %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
