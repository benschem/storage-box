<%= turbo_frame_tag @item do %>
  <div class="relative flex flex-col gap-4 content-center bg-slate-50 dark:bg-slate-900 p-4 rounded-xl shadow-md dark:shadow-md/90">
    <div class="flex flex-col gap-2">
      <h3 class="font-semibold text-xl md:text-2xl col-span-2 text-slate-900 dark:text-slate-100">
        <%= @item.name.capitalize %>
      </h3>

      <div class="text-lg flex gap-4 text-slate-500 stroke-slate-500 dark:text-slate-400 dark:stroke-slate-400">
        <div class="flex gap-2 content-center flex-wrap">
          <%= render "shared/icons/box" %>
          Box <%= @item.box.number %>
        </div>
        <div class="flex gap-2 content-center flex-wrap">
          <%= render "shared/icons/room" %>
          <%= @item.box.room.name.capitalize %>
        </div>
      </div>

      <div class="flex gap-2 content-center flex-wrap text-lg text-slate-500 stroke-slate-500 dark:text-slate-400 dark:stroke-slate-400">
        <%= render "shared/icons/house" %>
        <%= @item.box.room.house.address %>
      </div>

      <% if @item.description %>
        <p class=" text-slate-950 dark:text-slate-50">
          <%= @item.description %>
        </p>
      <% end %>
    </div>

    <% if @item.tags.present? %>
      <div class="flex flex-wrap gap-2">
        <% @item.tags.each do |tag|  %>
          <%= render "shared/tag", tag: tag %>
        <% end %>
      </div>
    <% end %>

    <img src="https://loremflickr.com/500/500/<%= @item.name.gsub(" ", "-") %>" alt="Picture of <%= @item.name %>" width="500" height="500" class="block self-center rounded-xl">
    <%# if @post.image.attached? %>
        <%#= image_tag @post.image.variant(resize_to_limit: [500, 500]), alt: "Picture of #{item.name}", class: "rounded-xl max-w-24" %>
    <%# end %>

    <div class="flex justify-between text-sm">
      <%= link_to item_path(@item), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "inline-flex gap-2 content-center justify-center text-slate-950 dark:text-slate-50 stroke-slate-950 dark:stroke-slate-950" do %>
        <%= render "shared/icons/trash", klasses: "w-5 h-5" %>
        Delete
      <% end %>
      <%= link_to edit_item_path(@item), class: "inline-flex gap-2 content-center justify-center text-slate-950 dark:text-slate-50 stroke-slate-950 dark:stroke-slate-50" do %>
        <%= render "shared/icons/pencil", klasses: "w-5 h-5" %>
        Edit
      <% end %>
      <%= link_to "#", class: "inline-flex flex-wrap gap-2 content-center justify-cente text-slate-950 dark:text-slate-50 " do %>
        Close
        <%= render "shared/icons/circle_chevron_up", klasses: "w-5 h-5 stroke-slate-950 dark:stroke-slate-50" %>
      <% end %>
    </div>
  </div>
<% end %>
