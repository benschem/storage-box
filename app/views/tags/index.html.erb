<div class="pt-8 px-6 pb-4">
  <h1 class="text-4xl font-bold">
    Tags
  </h1>
</div>

<div class="px-6 pb-4">
  <%= render "tags/form", tag: @tag %>
</div>

<ul class="p-2 bg-slate-100 dark:bg-slate-900">
  <%= turbo_frame_tag "tags_list", class: "flex flex-wrap gap-2" do %>
    <% unless @tags.blank? %>
      <% @tags.each do |tag| %>
        <li><%= render tag %></li>
      <% end %>
    <% else %>
      <li>You haven't added any tags yet!</li>
    <% end %>
  <% end %>
</ul>
