<h1 class="mt-8 mx-6 mb-4 text-4xl font-bold">
  Houses
</h1>

<%= turbo_stream_from "user_#{current_user.id}_invites" %>
  <div id="notifications" class="mx-2 mb-4">
    <% if @invites.present? %>
      <% @invites.each do |invite| %>
        <%= render "invites/invite", invite: invite %>
      <% end %>
    <% end %>
  </div>

<div class="mx-2 mb-4">
  <%= render "houses/form", house: @house %>
</div>

<ul>
  <%= turbo_frame_tag "houses_list", class: "flex flex-col gap-4 mx-2" do %>
    <% unless @houses.blank? %>
      <% @houses.each do |house| %>
        <li><%= render house, new_room: Room.new, new_invite: Invite.new %></li>
      <% end %>
    <% else %>
      <li>You haven't added any houses yet!</li>
    <% end %>
  <% end %>
</ul>

<div class="p-4"></div>
